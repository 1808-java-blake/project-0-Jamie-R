package com.revature.beans;

import java.util.List;

public class Admin extends User {
	/**
	 * 
	 */
	private static final long serialVersionUID = 7448057796579283308L;
	

	private boolean isAdmin;
	
	public Admin() {
		super();
	}
	
	public Admin(String username, String password, String name, double balance, List<String> transactions) {
		super(username, password, name, balance, transactions);
	}

	public Admin(boolean isAdmin, String username, String password, String name, double balance, List<String> transactions) {
		this(username, password, name, balance, transactions);
		this.isAdmin = isAdmin;
	}

	public Admin(boolean isAdmin) {
		super();
		this.isAdmin = isAdmin;
	}

	public boolean getIsAdmin() {
		return isAdmin;
	}

	public void setIsAdmin(boolean isAdmin) {
		this.isAdmin = isAdmin;
	}

	@Override
	public int hashCode() {
		final int prime = 31;
		int result = super.hashCode();
		result = prime * result + (isAdmin ? 1231 : 1237);
		return result;
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (!super.equals(obj))
			return false;
		if (getClass() != obj.getClass())
			return false;
		Admin other = (Admin) obj;
		if (isAdmin != other.isAdmin)
			return false;
		return true;
	}

	@Override
	public String toString() {
		return "Admin [isAdmin=" + isAdmin + ", getUsername()=" + getUsername() + ", getPassword()=" + getPassword()
				+ ", getName()=" + getName() + ", getBalance()=" + getBalance() + "]";
	}
	
	
}
